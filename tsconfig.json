{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@peloton/shared": ["./packages/shared/src"]
    }
  },
  "include": [
    "apps/web/src/**/*",
    "packages/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "apps/mobile",
    "supabase"
  ]
}
